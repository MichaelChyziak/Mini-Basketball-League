<p id="notice"><%= notice %></p>
<div class = "container">
<h1>Approved Teams</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Team Name</th>
      <th>League</th>
      <th>Number of Users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <% if(team.status == "approved") %>
        <tr>
          <td><%= team.team_name %></td>
          <td><%= team.league %></td>
          <td><%= team.users.count %></td>
          <td><%= link_to "Details", team %></td>
          <td><%= link_to "Join", :controller => "teams", :id => team.id, :action => "join_team", :method => :put, :status => true  %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

