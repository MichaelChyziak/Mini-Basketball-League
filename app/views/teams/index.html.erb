<p id="notice"><%= notice %></p>
<div class = "container">
<h1>Accepted Teams</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Team Name</th>
      <th>League</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team_name %></td>
        <td><%= team.league %></td>
        <td><%= link_to "Details", team %></td>
        <td><%= link_to "Edit", edit_team_path(team) %></td>
        <td><%= link_to "Delete", team, method: :delete, data: { confirm: "Are you sure?" } %></td>
        <td><%= "Join" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Pending Teams</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Team Name</th>
      <th>League</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team_name %></td>
        <td><%= team.league %></td>
        <td><%= link_to "Details", team %></td>
        <td><%= link_to "Edit", edit_team_path(team) %></td>
        <td><%= link_to "Delete", team, method: :delete, data: { confirm: "Are you sure?" } %></td>
        <td><%= "Approve" %></td>
        <td><%= "Decline" %></td>
        <td><%= "Join" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Create Team", new_team_path %>
 </div>
