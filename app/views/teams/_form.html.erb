

<%= form_for(@team) do |f| %>

  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% @team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>




  <div class="field">
    <div style="color:white; font-size:25px" ><%= f.label :team_name %></div><br>
    <%= f.text_field :team_name, :maxlength => 30, :required => true %>
  </div><br>

  <div class="field">
    <div style="color:white; font-size:25px" > <%= f.label :league %></div><br>
    <% if @team.status == "approved" %>
      <%= f.select(:league, %w[Gold Silver Bronze], {}, :disabled => true) %>
      <p style="color:white">Cannot edit the team's league once the team is approved</p>
    <% else %>
      <%= f.select(:league, %w[Gold Silver Bronze]) %>
    <% end %>
  </div>

