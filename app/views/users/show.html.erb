<% provide(:title, @user.username) %>
<body>

  <table style="height: 100%;">
    <tr>
      <td class="side-table">
        <div class="side-panel">

          <h1 style="text-align:center;">PROFILE</h1>
          </br>
          </br>

          <%= gravatar_for @user %>
          <br/>

          <div class="side-text">
              <p><strong style="color:#fd7400;">USERNAME:</strong></br><%= @user.username %></p>

              <p><strong style="color:#fd7400">EMAIL:</strong></br><%= @user.email %></p

              <p><strong style="color:#fd7400">HEIGHT:</strong></br><%= @user.height %></p>

              <p><strong style="color:#fd7400">WEIGHT:</strong></br><%= @user.weight %></p>

              <p><strong style="color:#fd7400">PRIMARY COURT:</strong></br><%= @user.primary_court %></p>

              <p><strong style="color:#fd7400">SECONDARY COURT:</strong></br><%= @user.secondary_court %></p>
              <br>

              <a href="/show" class="button button-glow button-rounded button-highlight" data-no-turbolink>Edit Courts</a>
              <br>
              <br>
          </div>

          <%=if current_user.id == @user.id
              link_to '<button class="button button-glow button-rounded button-highlight"><span class="glyphicon glyphicon-pencil"></span>&nbsp Edit</button>'.html_safe, edit_user_path(current_user)
            end%>
          <% if current_user.admin? && !current_user?(@user) && !@user.super_admin %>
            <%= link_to "Delete", @user, method: :delete,
                                          data: { confirm: "You sure?" } %>
          <% end %>

        </div>
      </td>
      <td>
        <div class="side-panel2">

          <h2 style="color:#fd7400; padding-top:75px;"><strong>ABOUT</strong></h2>
          <br/>

          <div class="side-text">
              <%= @user.about %></p>
            </div>

          <%=if @user.twitter.present?
              link_to(image_tag("/logo/Twitter.png", :alt =>"twitterLogo", :style => "height:15%; width:15%"), "http://www.twitter.com/#{@user.twitter}", :target => "_blank")
          end%>

        </div>
      </td>
    </tr>
  </table>

</body>



<style>
  body {
    background: url("/assets/profile-page-pic.png");
    background-size:100%;
    height: 100%;
    font-family: Verdana, Sans-serif;
  }

  .side-table {
    width:20%;
    height: 100%;
  }

  html {
    height: 100%;
  }

  .side-panel {
    height: 100%;
    bottom: 0;
    padding-top: 20px;
    padding-left: 50px;
    padding-right: 50px;
    background-color: white;
    color: black;
  }

table, td {
    padding-top: 0px;
    padding-bottom: 0px;
    margin-top: 0px;
    margin-bottom: 0px;
    top: 0;
    bottom: 0;
}

  .side-panel2 {
    height: 100%;
    bottom: 0;
    padding: 20px;
  }

  .side-text p {
    text-align: left;
    margin-bottom: 25px;
  }

.navbar {
  margin-bottom: 0px !important;
}


  img.gravatar {
    margin-bottom: 25px;
    width: 100px;
    height: 100px;
  }


</style>
