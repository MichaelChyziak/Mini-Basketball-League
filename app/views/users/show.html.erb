<% provide(:title, @user.username) %>
<body>
<div class="container">
  <div class="row">
    <div class="col-xs-6">
        <div class="pull-right" id="grava">
            <%= gravatar_for @user %>
            <br/>
            <h1>
              <%= @user.username %>
            </h1>
        </div>
    </div>
    <div class="col-xs-6">
      <div class="panel-heading">
        <h1 class="page-header" style="color:#ffffff">User Profile</h1>
      </div>
      <div class="panel-body">
        <div class="form-group" style= "margin-top:-20px ">
            <h3><strong style="color:#c45907">Username:</strong> <%= @user.username %><h3>
        </div>
        <div class="form-group">
            <h3><strong style="color:#c45907">Email:</strong> <%= @user.email %><h3>
        </div>
        <div class="form-group">
            <h3><strong style="color:#c45907">About:</strong> <%= @user.about %><h3>
        </div>
        <div class="form-group">
            <h3><strong style="color:#c45907">Height:</strong> <%= @user.height %><h3>
        </div>
        <div class="form-group">
            <h3><strong style="color:#c45907">Weight:</strong> <%= @user.weight %><h3>
        </div>
        <div class="form-group">
          <%=
            if @user.twitter.present?
              link_to(image_tag("/logo/Twitter.png", :alt =>"twitterLogo", :style => "height:15%; width:15%"), "http://www.twitter.com/#{@user.twitter}", :target => "_blank")
            end
          %>
        </div>
        <div>
          <%=
            if current_user.id == @user.id
              link_to '<button class="button button-glow button-rounded button-highlight"><span class="glyphicon glyphicon-pencil"></span>&nbsp Edit</button>'.html_safe, edit_user_path(current_user)
            end
          %>
          <% if current_user.admin? && !current_user?(@user) && !@user.super_admin %>
            <%= link_to "Delete", @user, method: :delete,
                                          data: { confirm: "You sure?" } %>
          <% end %>
        </div>
    </div>
  </div>
  </dibv>
</body>


