<% provide(:title, @user.username) %>
<body>

  <table style="height: 100%;">
    <tr>
      <td style="width:30%; height: 100%;">
  <div class="side-panel">

    <%= gravatar_for @user %>
    <br/>


        <h1 class="page-header"><%= @user.username %>'s Profile</h1>


            <p><strong style="color:#c45907">USERNAME:</strong> <%= @user.username %></p>

            <p><strong style="color:#c45907">EMAIL:</strong> <%= @user.email %></p

            <p><strong style="color:#c45907">HEIGHT:</strong> <%= @user.height %></p>

            <p><strong style="color:#c45907">WEIGHT:</strong> <%= @user.weight %></p>

          <%=
            if @user.twitter.present?
              link_to(image_tag("/logo/Twitter.png", :alt =>"twitterLogo", :style => "height:15%; width:15%"), "http://www.twitter.com/#{@user.twitter}", :target => "_blank")
            end
          %>

          <%=
            if current_user.id == @user.id
              link_to '<button class="button button-glow button-rounded button-highlight"><span class="glyphicon glyphicon-pencil"></span>&nbsp Edit</button>'.html_safe, edit_user_path(current_user)
            end
          %>
          <% if current_user.admin? && !current_user?(@user) && !@user.super_admin %>
            <%= link_to "Delete", @user, method: :delete,
                                          data: { confirm: "You sure?" } %>
          <% end %>
        </div>
      </td>
      <td>
        <div class="about-side">
          <p style="font-size: 25px; padding-left: 20px;"><strong style="color:#c45907">ABOUT:</strong></p>

          <p style="font-size: 12px; padding-right: 20px; padding-left: 20px;"><%= @user.about %></p>
        </div>
      </td>
    </tr>
  </table>



