<div class = "container">
<h1>Regular Users</h1>

<table class = "table">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Date Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if(!user.admin) %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.created_at %></td>
          <td><%= link_to "View", user %></td>
          <td><%= link_to "Delete", user, method: :delete, data: { confirm: "This will also remove the team if this user is the team's captain. Are you sure you want to delete this user? " } %></td>
          <td><%= link_to "Admin", :controller => "users", :id => user.id, :action => "enable_admin", :method => :put, :status => true %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<h1>Admins</h1>

<table class = "table">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Date Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if(user.admin && !user.super_admin) %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.created_at %></td>
          <td><%= link_to "View", user %></td>
          <td><%= link_to "Un-Admin", :controller => "users", :id => user.id, :action => "disable_admin", :method => :put, :status => true %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>


</div>
