<div class = "container">
<h1>Regular Users</h1>

<table class = "table">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Date Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if(!user.admin) %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.created_at %></td>
          <td><%= link_to "View", user %></td>
          <td><%= link_to "Admin", :controller => "users", :id => user.id, :action => "enable_admin", :method => :put, :status => true %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<h1>Admins</h1>

<table class = "table">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Date Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if(user.admin) %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.created_at %></td>
          <td><%= link_to "View", user %></td>
          <td><%= link_to "Un-Admin", :controller => "users", :id => user.id, :action => "disable_admin", :method => :put, :status => true %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>


</div>
