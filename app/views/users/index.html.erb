<div class = "container">
<h1>Regular Users</h1>

<table class = "table">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Date Created</th>
      <th>Last Login Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if(!user.admin) %>
        <tr>
          <td><%= user.name %></td>
          <td></td>
          <td></td>
          <td><%= link_to "View", user %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<h1>Admins</h1>

<table class = "table">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Date Created</th>
      <th>Last Login Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if(user.admin) %>
        <tr>
          <td><%= user.name %></td>
          <td></td>
          <td></td>
          <td><%= link_to "View", user %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>


</div>
