  <style>
  th{
      text-align:center;
  }

  .box{
    width:30%;
    text-align: center;
    margin: auto;
    padding: 10px;

  }

  .row{
    text-align: center;
  }


  body{
  	background-image: url();
	   background-size:100%;
  }


  #schedule{
  color:#1270ce;
}

</style>




  </head>
<body >



<div class="container">
    <div class="row"style="width:100%">


        <div class="panel panel-primary" style="border-color:#c7c8c9">

            <h3 class="text-center">
                        Schedule</h3>

        <div class="panel-body">


 <table class="table table-striped table-condensed">
        <thead>
          <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Location</th>
                <th>Team A</th>
                <th>Team B</th>
                <th>Details</th>
                <th>Score</th>
                <th>Submit</th>
          </tr>
        </thead>


              <tbody>

            <%if @league_bronze.active? %>
              <% @scores.each do |score| %>
                <tr>
                    <%if index < 4 %>
                    <td>2016/10/<%=index+1%></td>
                    <%elsif index < 8 %>
                    <td>2016/10/<%=index+5%></td>
                    <%elsif index < 12 %>
                    <td>2016/10/<%=index+9%></td>
                    <%elsif index < 16 %>
                    <td>2016/10/<%=index+13%></td>
                    <%elsif index < 20 %>
                    <td>2016/11/<%=index-13%></td>
                    <%elsif index < 24 %>
                    <td>2016/11/<%=index-9%></td>
                    <%else %>
                    <td>2016/11/<%=index-5%></td>
                    <%end%>
                    

                    <td>6:00 PM</td>
                    <td>N/A</td>
                    <% team1 = Team.find(score.team_1_id) %>
                    <% team2 = Team.find(score.team_2_id) %>
                    <td><%= team1.team_name %></td>
                    <td><%= team2.team_name  %></td>
                    <td><a href="" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink>Details</a></td>
                    </td>

                    <td></td>
                    <%if (current_user.id == team1.captain_id) || (current_user.id == team2.captain_id)%>
                      <td><a href="" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink>Submit Score</a></td>
                    <%else%>
                      <td>--</td>
                    <%end%>
                </tr>
              <% end %>

            <% elsif @teams_approved_bronze.length != 8%>
               <b style="color:red; font-size: 20px"> Schedule will be generated when there are exactly 8 approved teams.</b>
            <% elsif @teams_approved_bronze.length == 8 %>
               <% if current_user.admin? %>
                 <a href="/league/start?league_name=Bronze" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink>Start League</a>
               <% else %>
                 <b style="color:red; font-size: 20px"> Waiting for an admin to start the league.</b>
               <% end %>
            <%end%>
              </tbody>
            </div>
       </div>


</div>



    </table>


<p>Note: when clicking Details, it will lead to Google Maps/Calendar.</p>
</br>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
