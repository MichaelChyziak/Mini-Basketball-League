<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Mini Basketball</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  <style>

  body {
    background-image: url("/assets/van.png");
    background-size: 100%;
    background-attachment: fixed;
  }

  th{
      text-align:center;
  }

  .box{
    width:30%;
    text-align: center;
    margin: auto;
    padding: 10px;

  }

  .row{
    text-align: center;
  }



  #schedule{
  color:#1270ce;
}

</style>


</head>




<body>



<div class="container">
    <div class="row"style="width:100%">


        <div class="panel panel-primary" style="border-color:#c7c8c9">

            <h3 class="text-center">
                        Schedule</h3>

        <div class="panel-body">


 <table class="table table-striped table-condensed" >
        <thead>
          <tr>
          <th>Date</th>
              <th>Time</th>

              <th>Team A</th>
              <th>Team B</th>
              <th>Location</th>
              <th>Score</th>
              <th>Submit</th>
           </tr>
        </thead>

              <tbody>

            <%if @league.active? %>

               <% if current_user.admin? %>
                <a href="/league/back?league_name=Vancouver" class="btn btn-sm btn-primary btn-block" role="button"  data-no-turbolink > Reset League</a>

              <% end %>
              <% @scores.each_with_index do |score,index| %>

              <tr>

                    <td class="spanDate"></td>



                    <td>6:00 PM</td>



                    <%if Team.where(:id => score.team_1_id).first==nil && !(Team.where(:id => score.team_2_id).first==nil) %>
                          <% team2 = Team.find(score.team_2_id) %>
                          <td>--</td>
                          <td><%= team2.team_name  %></td>

                          <%if score.primary_court == "David Lam Park"%>
                          <td><a href="/location?court=David Lam Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%elsif score.primary_court == "Sutcliffe Park"%>
                          <td><a href="/location?court=Sutcliffe Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%elsif score.primary_court == "Garden Park"%>
                          <td><a href="/location?court=Garden Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%elsif score.primary_court == "Oak Park"%>
                          <td><a href="/location?court=Oak Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%else%>
                          <td><a href="/location?court=Queen Elizabeth Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%end%>

                          </td>
                          <% if score.approved_score %>
                            <td><%= score.official_team_1_score %> - <%= score.official_team_2_score %></td>
                          <% else %>
                            <td></td>
                          <% end %>

                          <%if (current_user.id == team2.captain_id) && !score.approved_score%>
                            <td><%= link_to "Submit Score", score_form_path(score), :class => "btn btn-sm btn-primary btn-block", role: "button" %></td>
                          <%else%>
                            <td>--</td>
                          <%end%>



                    <%elsif  !(Team.where(:id => score.team_1_id).first==nil) && Team.where(:id => score.team_2_id).first==nil %>
                          <% team1 = Team.find(score.team_1_id) %>
                          <td><%= team1.team_name  %></td>
                          <td>--</td>

                          <%if score.primary_court == "David Lam Park"%>
                          <td><a href="/location?court=David Lam Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%elsif score.primary_court == "Sutcliffe Park"%>
                          <td><a href="/location?court=Sutcliffe Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%elsif score.primary_court == "Garden Park"%>
                          <td><a href="/location?court=Garden Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%elsif score.primary_court == "Oak Park"%>
                          <td><a href="/location?court=Oak Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%else%>
                          <td><a href="/location?court=Queen Elizabeth Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%end%>

                          </td>
                          <% if score.approved_score %>
                            <td><%= score.official_team_1_score %> - <%= score.official_team_2_score %></td>
                          <% else %>
                            <td></td>
                          <% end %>

                          <%if (current_user.id == team1.captain_id) && !score.approved_score%>
                            <td><%= link_to "Submit Score", score_form_path(score), :class => "btn btn-sm btn-primary btn-block", role: "button" %></td>
                          <%else%>
                            <td>--</td>
                          <%end%>


                    <%elsif  Team.where(:id => score.team_1_id).first==nil && Team.where(:id => score.team_2_id).first==nil %>
                          <td>--</td>
                          <td>--</td>
                          <%if score.primary_court == "David Lam Park"%>
                          <td><a href="/location?court=David Lam Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%elsif score.primary_court == "Sutcliffe Park"%>
                          <td><a href="/location?court=Sutcliffe Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%elsif score.primary_court == "Garden Park"%>
                          <td><a href="/location?court=Garden Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%elsif score.primary_court == "Oak Park"%>
                          <td><a href="/location?court=Oak Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%else%>
                          <td><a href="/location?court=Queen Elizabeth Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%end%>
                          </td>
                          <% if score.approved_score %>
                            <td><%= score.official_team_1_score %> - <%= score.official_team_2_score %></td>
                          <% else %>
                            <td></td>
                          <% end %>

                          <td>--</td>




                    <%else%>
                          <% team1 = Team.find(score.team_1_id) %>
                          <% team2 = Team.find(score.team_2_id) %>

                          <td><%= team1.team_name %></td>
                          <td><%= team2.team_name  %></td>



                          <%if score.primary_court == "David Lam Park"%>
                          <td><a href="/location?court=David Lam Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%elsif score.primary_court == "Sutcliffe Park"%>
                          <td><a href="/location?court=Sutcliffe Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%elsif score.primary_court == "Garden Park"%>
                          <td><a href="/location?court=Garden Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%elsif score.primary_court == "Oak Park"%>
                          <td><a href="/location?court=Oak Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%else%>
                          <td><a href="/location?court=Queen Elizabeth Park&league=0" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink  > See On Map</a></td>
                          <%end%>

                          </td>
                          <% if score.approved_score %>
                            <td><%= score.official_team_1_score %> - <%= score.official_team_2_score %></td>
                          <% else %>
                            <td></td>
                          <% end %>

                            <%if ((current_user.id == team1.captain_id) || (current_user.id == team2.captain_id)) && !score.approved_score%>
                              <td><%= link_to "Submit Score", score_form_path(score), :class => "btn btn-sm btn-primary btn-block", role: "button" %></td>
                            <%else%>
                              <td>--</td>
                            <%end%>
                    <%end%>

                </tr>
                <%end%>


            <% elsif @teams_approved.length != 8 %>
              <b style="color:red; font-size: 20px"> Schedule will be generated when there are exactly 8 approved teams.</b>
            <% elsif @teams_approved.length == 8 %>
              <% if current_user.admin? %>
                <a href="/league/start?league_name=Vancouver" class="btn btn-sm btn-primary btn-block" role="button" data-no-turbolink >Start League</a>
              <% else %>
                <b style="color:red; font-size: 20px"> Waiting for an admin to start the league.</b>
              <% end %>
            <%end%>
              </tbody>
            </div>
       </div>
       </div>
       </div>


</div>



    </table>



</br>

<script type="text/javascript">

   var months = ['January','February','March','April','May','June','July',
'August','September','October','November','December'];
  var startDate = new Date();
  //start date will be 5 days from current date
  startDate.setTime(startDate.getTime() + (1000*3600*24)*(4));
  var dateArray =  document.getElementsByClassName("spanDate");
  for (i=0;i<dateArray.length;i++){
  if ((i+1)%4==1 && i!=0){
    //rest for 5 days for every round
    startDate.setTime(startDate.getTime() + (1000*3600*24)*4);
  }
  startDate.setTime(startDate.getTime() + (1000*3600*24));
  dateArray[i].innerHTML = months[startDate.getMonth()] + " " + startDate.getDate()+ ", " + startDate.getFullYear();
  }
</script>

  </body>
</html>
